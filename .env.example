# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
DB_HOST=localhost
DB_PORT=4001
DB_NAME=abc_custody_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres

# Sequelize Configuration
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# QuickNode Configuration
# BLOCKCHAIN_ENV: mainnet (Ethereum Mainnet with Token & NFT API v2) or testnet (Holesky with Standard RPC)
BLOCKCHAIN_ENV=testnet
QUICKNODE_MAINNET_URL=your-quicknode-mainnet-url-here
QUICKNODE_HOLESKY_URL=your-quicknode-holesky-url-here

# BlockDaemon Vault Configuration
BLOCKDAEMON_API_URL=https://your-domain.blockdaemon-wallet.com
BLOCKDAEMON_API_KEY=your-blockdaemon-api-key-here
BLOCKDAEMON_DEFAULT_VAULT_ID=7
